{
  "extends": "@switchboard-xyz",
  "root": true,
  "rules": {
    "quotes": "off",
    "@typescript-eslint/ban-ts-comment": "off",
    "no-control-regex": "off",
    "node/no-unpublished-require": [
      "off"
    ],
    "node/no-unpublished-import": [
      "off"
    ],
    "node/no-extraneous-import": [
      "error"
    ]
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": "latest",
    "allowImportExportEverywhere": true,
    "ecmaVersion": 2020
  }
}